#! /bin/bash

printf "CC=gcc
CFLAGS=-c -O3
LDLIBS=$(pkg-config --static --libs glfw3 glew) -lm
LDFLAGS=$(pkg-config --cflags glfw3 glew) -I/usr/include/GL -I/opt/local/include/GL
EXECUTABLE=main
SOURCES=$(echo $(find src -type f | grep "\.c$"))\n"\
$'OBJECTS=$(SOURCES:.c=.o)
VPATH=
all: $(SOURCES) $(EXECUTABLE)
$(EXECUTABLE): $(OBJECTS)
	$(CC) -o $(EXECUTABLE) $(OBJECTS) $(LDLIBS) $(LDFLAGS)
.c.o:
	$(CC) $(CFLAGS) $< -o $@ $(LDFLAGS)
clean:
	rm -f $(OBJECTS) $(EXECUTABLE)
' > makefile
